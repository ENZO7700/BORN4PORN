
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow get, update, delete: if isOwner(userId);
      allow list: if isSignedIn();
    }

    match /ppv_events/{ppvEventId} {
      allow get, list: if true;
      allow write: if false;
    }

    match /users/{userId}/subscriptions/{subscriptionId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/purchases/{purchaseId} {
      allow read, write: if isOwner(userId);
    }

    match /contestants/{contestantId} {
      allow get, list: if true;
      allow write: if false;
    }

    match /archive_videos/{videoId} {
        allow get, list: if true;
        allow write: if false;
    }

    match /votes/{voteId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    match /live_chat_messages/{messageId} {
      allow list, create: if isSignedIn();
      allow get, update, delete: if false;
    }

    /**
     * @description Manages casting applications submitted from the website.
     * @allow (create) Anyone can submit a casting application. This is simplified for the prototype to avoid server-side secrets.
     * @deny (read, update, delete) Reading and modification are denied from the client to protect applicant data.
     * @principle Secures sensitive application data by allowing creation but preventing any other client-side interaction.
     */
    match /casting_applications/{applicationId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
